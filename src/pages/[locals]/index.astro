---
import Layout from "@src/layout/Layout.astro";
import PageHeader from "@components/PageHeader/PageHeader.astro";
import Varsler from "../../components/VarselFetcher/VarselFetcher.astro";
import {Loader} from "@navikt/ds-react";
import {type Locale} from "@src/customTypes/Locale";
import {text} from "@src/language/text";
import VarselFetcher from "../../components/VarselFetcher/VarselFetcher.astro";
const currentLocale = Astro.currentLocale as Locale
---

<Layout>
    <PageHeader />
    <VarselFetcher server:defer>
        <Loader size="3xlarge" slot="fallback" title={text.loadingMessage[currentLocale]}/>
    </VarselFetcher>
</Layout>

