---
import {text} from "../../language/text";
import PageHeader from "../PageHeader/PageHeader.astro";
import VarselFetcher from "../VarselFetcher/VarselFetcher.astro";
import {Loader} from "@navikt/ds-react";
import {type Locale} from "../../customTypes/Locale";
import Layout from "../../layout/Layout.astro";
const currentLocale = Astro.currentLocale as Locale

---


<Layout >
    <PageHeader />
    <VarselFetcher server:defer>
        <Loader size="3xlarge" slot="fallback" title={text.loadingMessage[currentLocale]}/>
    </VarselFetcher>
</Layout>